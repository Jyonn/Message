<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WriteTextActivity"
    android:paddingLeft="24dp"
    android:paddingRight="24dp">

    <cn.a6_79.message.CircleBar
        android:id="@+id/circle"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dip"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="center"
        android:clickable="false"
    />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="12.5sp"
        android:textColor="@color/white"
        android:paddingBottom="5dp"
        android:text=" 这里选择抬头"/>
    <Spinner android:id="@+id/spinner_title"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center|center_horizontal"
        android:spinnerMode="dialog"/>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">
        <EditText android:id="@+id/write_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:hint="这里输入文字" />
    </android.support.design.widget.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="15sp"
            android:gravity="center"
            android:id="@+id/time_has_set"
            android:text="2016-11-11 11:11"
            />
        <ImageButton
            android:id="@+id/set_clock"
            android:background="@null"
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:src="@drawable/clock"/>
    </LinearLayout>

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/text_end"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:padding="12dp"
        android:text="继续选择联系人"/>

</LinearLayout>